@model PruebaTec02KDSB.Models.Medida

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Medida</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Medida1" class="control-label"></label>
                <input asp-for="Medida1" class="form-control" />
                <span asp-validation-for="Medida1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary btn-ls" />
                <a class="btn btn-danger btn-ls" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
